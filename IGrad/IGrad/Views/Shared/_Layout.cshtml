<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/form-layout.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>

    <div class="container-fluid body-content">

        @Html.Partial("_ApplicationNavigation")
    </div>
    <div class="container">
        <!-- Return to Top -->
        <a href="javascript:" id="return-to-top">
            <span class="up-icon"><i class="fas fa-chevron-up"></i></span>
        </a>
        @RenderBody()
    </div>



    <footer>
        <div class="container">
            <div class="col-md-3">
                <h4>Find iGrad</h4>
                <a href="https://www.google.com/maps/place/25668+104th+Ave+SE,+Kent,+WA+98030/@('@')47.3709881,-122.2038498,17z/data=!3m1!4b1!4m5!3m4!1s0x54905eb61d0c8649:0x6a880f9cf0888751!8m2!3d47.3709881!4d-122.2016611?hl=en" target="_blank">25668 104th Ave SE<br>Kent, WA 98030</a>
            </div>
            <div class="col-md-3">
                <h4>Office Hours</h4>
                <p>Monday - Friday<br>8:00 am - 8:15 pm</p>
            </div>
            <div class="col-md-3">
                <h4>Student Hours</h4>
                <p>Monday - Friday<br>8:00 am - 8:30 pm</p>
            </div>
            <div class="col-md-3">
                <h4>Follow Us</h4>
                <ul class="list-inline list-social">
                    <li class="social-facebook">
                        <a href="https://www.facebook.com/iG415" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    </li>
                    <li class="social-twitter">
                        <a href="https://twitter.com/iGrad415" target="_blank"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="social-linkedin">
                        <a href="https://www.linkedin.com/company/kent-school-district" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                    </li>
                    <li class="social-youtube">
                        <a href="https://www.youtube.com/user/KentSchoolDistrictIT" target="_blank"><i class="fab fa-youtube"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>



    <!-- FONTAWESOME JS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="~/Scripts/progress-bar.js"></script>
    <script type="text/javascript" src="~/Scripts/back-to-top.js"></script>

</body>
</html>
