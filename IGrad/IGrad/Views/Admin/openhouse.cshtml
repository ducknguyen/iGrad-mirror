@model IGrad.Models.OpenHouse.OpenHouse

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("FinalPage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="form-group row">
            <div class="col-md-3 col-md-offset-1  col-form-label">
                @Html.LabelFor(model => model.OpenDays, htmlAttributes: new { @class = "" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.OpenDays, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 col-md-offset-1  col-form-label">
                @Html.LabelFor(model => model.WhatToBring, htmlAttributes: new { @class = "" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.WhatToBring, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 col-md-offset-1  col-form-label">
                @Html.LabelFor(model => model.Announcements, htmlAttributes: new { @class = "" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Announcements, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        <div class="form-row">
            <div class="pull-right">
                <button class="btn btn-primary btn-lg btn-success" type="submit">
                    Save
                    <i class="fas fa-caret-right"></i>
                </button>
            </div>
        </div>
    </div>
}
