@model List<IGrad.Models.User.UserModel>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
    {
        <p>
            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                First Name
            </th>
            <th>
                @Html.ActionLink("Last Updated Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Email
            </th>
            <th>
                Details
            </th>
            <th>
                Enrollment Form
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name.LName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name.FName)
                </td>
                <td>
                    <!-- last modified date needs to be added -->
                </td>
                <td>
                    <a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { userid = item.UserID })
                </td>
                <td>
                    <button type="button" class="btn btn-success">
                        @Html.ActionLink("Download PDF", "Download", new { userid = item.UserID })
                    </button>
                </td>
            </tr>
        }

    </table>

</div>