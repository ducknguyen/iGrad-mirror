@using IGrad.Models.User;
@model List<Guardian>

<div>
    <h4>Parent / Guardian(s)</h4>
    <hr />
    <table>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>| Edit</th>
        </tr>
        @{foreach (Guardian guardian in Model)
            {
                <tr>
                    <td>@guardian.Name.FName @guardian.Name.LName</td>
                    <td>@guardian.Phone.PhoneNumber</td>
                    <td>@guardian.Email</td>
                    <td>@Html.ActionLink("Delete", "DeleteGuardian", guardian)</td>
                </tr>
            }
        }
    </table>

</div>

