@using IGrad.Models.User;
@model List<Guardian>


<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone One</th>
            <th>Phone Two</th>
            <th>Email</th>
            <th>Residence</th>
            <th class="text-center">Edit</th>
        </tr>
    </thead>
    @{foreach (Guardian guardian in Model)
        {
            if (ViewData["ResidenceType"] != null)
            {
                if (guardian.GuardianResidenceType.ToString() == (string)ViewData["ResidenceType"])
                {
                    <tr id="guardian_@guardian.fieldId">
                        <td>@guardian.Name.FName @guardian.Name.LName</td>
                        <td>@guardian.PhoneOne.PhoneNumber</td>
                        <td>@guardian.PhoneTwo.PhoneNumber</td>
                        <td>@guardian.Email</td>
                        <td>@guardian.GuardianResidenceType</td>
                        <td class="text-center">
                            <button class="btn btn-danger remove-primary-guardian" type="submit" onclick="deleteGuardian(@guardian.fieldId)">
                                <i class="fas fa-minus-square"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr id="guardian_@guardian.fieldId">
                    <td>@guardian.Name.FName @guardian.Name.LName</td>
                    <td>@guardian.PhoneOne.PhoneNumber</td>
                    <td>@guardian.PhoneTwo.PhoneNumber</td>
                    <td>@guardian.Email</td>
                    <td>@guardian.GuardianResidenceType</td>
                    <td class="text-center">
                        <button class="btn btn-danger remove-secondary-guardian" type="submit" onclick="deleteGuardian(@guardian.fieldId)">
                            <i class="fas fa-minus-square"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    }
</table>


