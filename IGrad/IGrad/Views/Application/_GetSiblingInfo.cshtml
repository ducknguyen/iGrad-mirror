@using IGrad.Models.User;
@model List<Sibling>


<table class="table table-striped table-bordered table-responsive" id="siblings-table">
    <tr>
        <th>Name</th>
        <th>School</th>
        <th>Grade</th>
        <th>Age</th>
        <th class="text-center">Remove</th>
    </tr>
    @foreach (Sibling sibling in Model)
    {
    <tr id="sibling_@sibling.fieldId">
        <td>@sibling.FName @sibling.LName</td>
        <td>@sibling.School</td>
        <td>@sibling.Grade</td>
        <td>@sibling.Age</td>
        <td class="text-center">
            <button class="btn btn-danger" type="submit" onclick="deleteSibling(@sibling.fieldId)">
                <i class="fas fa-minus-square"></i>
            </button>
        </td>
    </tr>
    }
</table>

