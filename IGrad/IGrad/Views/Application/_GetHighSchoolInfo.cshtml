@model List<IGrad.Models.User.HighSchoolInfo>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    function deleteHighSchoolRecord(fieldId) {
        $.ajax({
            type: "POST",
            url: '/Application/DeleteHighSchool',
            data: {"fieldId":fieldId},
            success: function (result) {
                console.log(result);
            }
        });
    }
</script>
@if (Model != null)
{

        <table id="highschool-info-table" class="table table-responsive">
            <tr>
                <th>Year</th>
                <th>Name</th>
                <th>City</th>
                <th>Grade</th>
                <th>Last High School Attended?</th>
                <th>| Edit</th>
            </tr>
            @foreach (var hsi in Model)
            {
                <tr>
                    <td>@hsi.HighSchoolYear</td>
                    <td>@hsi.HighSchoolName</td>
                    <td>@hsi.HighSchoolCity</td>
                    <td>@hsi.HighSchoolGrade</td>
                    <td>@(hsi.isLastHighSchoolAttended ? "Yes" : "No")</td>
                    <td>@hsi.fieldId</td>
                    <td><input type="submit" class="hs_delete" value="Delete" onclick="deleteHighSchoolRecord(@hsi.fieldId)"></td>
                </tr>
            }
        </table>

}
