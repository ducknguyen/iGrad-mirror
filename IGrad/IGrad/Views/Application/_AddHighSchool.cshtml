@model IGrad.Models.User.HighSchoolInfo

@using (Ajax.BeginForm("SubmitHighSchoolInfoPartial", "Application", new AjaxOptions()
{
    HttpMethod = "Post",
    UpdateTargetId = "highschool-info",
    InsertionMode = InsertionMode.Replace,

}, new { @id = "add-hs-form" }))
{
    @Html.AntiForgeryToken()
    <div class="" id="add-highschool-form">
        <h4 class="">Add A New High School</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HighSchoolName, htmlAttributes: new { @class = "control-label required-marker" })
                @Html.EditorFor(model => model.HighSchoolName, new { htmlAttributes = new { @class = "form-control", @placeholder = "School name" } })
                @Html.ValidationMessageFor(model => model.HighSchoolName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HighSchoolYear, htmlAttributes: new { @class = "control-label required-marker" })
                @Html.EditorFor(model => model.HighSchoolYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last year attended" } })
                @Html.ValidationMessageFor(model => model.HighSchoolYear, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HighSchoolCity, htmlAttributes: new { @class = "control-label required-marker" })
                @Html.EditorFor(model => model.HighSchoolCity, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                @Html.ValidationMessageFor(model => model.HighSchoolCity, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HighSchoolState, htmlAttributes: new { @class = "control-label required-marker" })
                @Html.EditorFor(model => model.HighSchoolState, new { htmlAttributes = new { @class = "form-control", @placeholder = "State" } })
                @Html.ValidationMessageFor(model => model.HighSchoolState, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HighSchoolGrade, htmlAttributes: new { @class = "control-label required-marker" })
                @Html.EditorFor(model => model.HighSchoolGrade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HighSchoolGrade, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.isLastHighSchoolAttended, htmlAttributes: new { @class = "control-label required-marker" })
                <br />
                @Html.RadioButtonFor(model => model.isLastHighSchoolAttended, true) Yes
                @Html.RadioButtonFor(model => model.isLastHighSchoolAttended, false) No
                @Html.ValidationMessageFor(model => model.isLastHighSchoolAttended, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <br />
        <div class="row">
            <div class="col-md-12">
                <button id="submitButton" type="submit" form="add-hs-form" class="btn btn-primary" onclick="processAddHighSchool()">Add Highschool</button>
                <button id="cancelButton" type="button" class="btn" onclick="hideTarget('school-information');showTarget('add-new-highschool-button')">Cancel</button>
            </div>
        </div>
    </div>
}





