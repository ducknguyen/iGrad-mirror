@model IGrad.Models.User.HighSchoolInfo

@Styles.Render("~/Content/site.css")
@using (Ajax.BeginForm("SubmitHighSchoolInfoPartial", "Application", new AjaxOptions()
{
    HttpMethod = "Post",
    UpdateTargetId = "highschool-info",
    InsertionMode = InsertionMode.Replace,

}, new { @id = "add-hs-form" }))
{
    @Html.AntiForgeryToken()
    <div class="container form-horizontal" id="add-highschool-form">
        <h4>Add A New High School</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(model => model.HighSchoolName, htmlAttributes: new { @class = "control-label " })
            @Html.EditorFor(model => model.HighSchoolName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HighSchoolName, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            @Html.LabelFor(model => model.HighSchoolYear, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HighSchoolYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HighSchoolYear, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            @Html.LabelFor(model => model.HighSchoolCity, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HighSchoolCity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HighSchoolCity, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            @Html.LabelFor(model => model.HighSchoolState, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HighSchoolState, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HighSchoolState, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            @Html.CheckBoxFor(model => model.isLastHighSchoolAttended)
            @Html.LabelFor(model => model.isLastHighSchoolAttended, htmlAttributes: new { @class = "control-label" })
            @Html.ValidationMessageFor(model => model.isLastHighSchoolAttended, "", new { @class = "text-danger" })
        </div>
        <div class="row ">
            @Html.LabelFor(model => model.HighSchoolGrade, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HighSchoolGrade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HighSchoolGrade, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="container">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="submitButton" type="submit" form="add-hs-form" class="btn btn-primary" onclick="hideTarget('school-information');showTarget('add-new-highschool-button')">Add Highschool</button>
                    <button id="cancelButton" type="button" class="btn" onclick="hideTarget('school-information');showTarget('add-new-highschool-button')">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}





